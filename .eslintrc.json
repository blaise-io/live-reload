{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "rules": {
    "arrow-parens": [2, "always"],
    "comma-dangle": [2, "always-multiline"],
    "keyword-spacing": 2,
    "max-len": [1, 80, 4],
    "no-debugger": 2,
    "no-console": [2, {"allow": ["error"]}],
    "no-extra-semi": 1,
    "no-trailing-spaces": 2,
    "no-unreachable": 1,
    "no-unused-expressions": 1,
    "no-unused-vars": 2,
    "no-var": 2,
    "prefer-template": 2,
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "space-before-function-paren": [2, "never"],
    "spaced-comment": [2, "always"]
  },
  "globals": {
    "browser": false,
    "chrome": false
  }
}
