{
  "manifest_version": 2,
  "name": "Live Reload",
  "version": "1.0.0b",
  "description": "Reload a browser tab when source files are updated.",
  "background": {
    "scripts": [
      "/shared/rules.js",
      "/shared/match-pattern.js",
      "/background/background.js"
    ]
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": "icons/icon.svg",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "<all_urls>",
    "tabs",
    "storage"
  ],
  "applications": {
    "gecko": {
      "id": "live-reload@blaise.io"
    }
  }
}
