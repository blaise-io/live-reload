{
  "manifest_version": 2,
  "name": "Live Reload",
  "description": "Monitors source files on a page. Reloads the page or just the changed stylesheet when source files are updated.",
  "version": "1.4.2",
  "author": "Blaise Kal",
  "homepage_url": "https://github.com/blaise-io/live-reload",
  "background": {
    "scripts": [
      "/shared/rules.js",
      "/shared/match-pattern.js",
      "/background/background.js"
    ]
  },
  "browser_action": {
    "browser_style": false,
    "default_icon": "/icons/icon.svg",
    "default_popup": "/popup/popup.html"
  },
  "options_ui": {
    "page": "/options/options.html"
  },
  "permissions": [
    "<all_urls>",
    "tabs",
    "storage"
  ],
  "applications": {
    "gecko": {
      "id": "live-reload@blaise.io"
    }
  }
}
